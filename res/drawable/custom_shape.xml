<?xml version="1.0" encoding="utf-8"?>
<!-- Custom graphic figure: Ukrainian flag with rounded corners -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Blue part (top half) -->
    <item
        android:top="0dp"
        android:bottom="50%">
        <shape android:shape="rectangle">
            <solid android:color="@color/ukraine_blue"/>
            <corners 
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"/>
        </shape>
    </item>
    
    <!-- Yellow part (bottom half) -->
    <item
        android:top="50%"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ukraine_yellow"/>
            <corners 
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"/>
        </shape>
    </item>
</layer-list>
